# Check if the pypdf module is installed

try:
    import pypdf
    print("pypdf installed")
except ImportError:
    print("pypdf not installed")
    print("Please look through README.md for installation instructions.")

# Merge PDFs using pypdf 6.x

from pypdf import PdfWriter

import os

# List your PDF files here
files = [
    r"your file path/file1.pdf",
    r"your file path/file2.pdf"
]

# Check existence
for f in files:
    if not os.path.exists(f):
        raise FileNotFoundError(f" File not found: {f}")
    else:
        print(f"Found: {f}")

# Merge
writer = PdfWriter()

for pdf in files:
    writer.append(pdf)

output_path = "your purpose path/merged.pdf"
writer.write(output_path)

print("ðŸŽ‰ Merge complete! Output:", output_path)
